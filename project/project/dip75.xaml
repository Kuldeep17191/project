<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="project.dip75">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width=".5*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="20"/>

            <RowDefinition Height="53"/>
            <RowDefinition Height="53"/>
            <RowDefinition Height="53"/>
            <RowDefinition Height="53"/>

            <RowDefinition Height="20"/>
            <RowDefinition Height="53"/>
            <RowDefinition Height="53"/>
            <RowDefinition Height="53"/>
            <RowDefinition Height="53"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Label Text="Graduate Diploma of Applied IT(level 7)" Grid.Row="0" FontSize="25" Grid.ColumnSpan="3" TextColor="White" FontFamily="ovo" BackgroundColor="#0080ff"  VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>


        <Label Text="Semester1" Grid.Row="1"  FontSize="15" VerticalTextAlignment= "Center" Grid.ColumnSpan="3" TextColor="white" FontFamily="ovo" BackgroundColor="#0080ff" HorizontalTextAlignment="Center"/>

        <Button Text="Level 6 Elective" x:Name="level61elective" Clicked="level61elective_Clicked"   Grid.ColumnSpan="3"  FontSize="15" Grid.Row="2" BackgroundColor="#51A2D5"/>
        <Button Text="Level 6 Elective" x:Name="level62elective" Clicked="level62elective_Clicked"  Grid.ColumnSpan="3"  FontSize="15" Grid.Row="3" BackgroundColor="#51A2D5" />
        <Button Text="Level 6 Elective" x:Name="level63elective" Clicked="level63elective_Clicked"  Grid.ColumnSpan="3" FontSize="15" Grid.Row="4"  BackgroundColor="#51A2D5" />
        <Button Text="Level 7 Elective" x:Name="level71elective" Clicked="level71elective_Clicked" Grid.ColumnSpan="3" Grid.Row="5"   FontSize="15" BackgroundColor="#51A2D5"/>

        <Label Text="Semester2" Grid.ColumnSpan="3" TextColor="white" Grid.Row="6" FontSize="15" WidthRequest="200" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" BackgroundColor="#0080ff"/>

        <Button Text="Level 7 Elective" x:Name="level72elective" Clicked="level72elective_Clicked" Grid.ColumnSpan="3"  Grid.Row="7"   FontSize="15" BackgroundColor="#51A2D5"  />
        <Button Text="Level 7 Elective" x:Name="level73elective" Clicked="level73elective_Clicked" Grid.ColumnSpan="3" Grid.Row="8"    FontSize="15" BackgroundColor="#51A2D5"  />
        <Label Text="GENR.7101 Project"  Grid.ColumnSpan="3" Grid.Row="9"  FontSize="15"  BackgroundColor="#51A2D5" />
       
        <ImageButton x:Name="back" Clicked="Back_Clicked" Grid.Row="11" Grid.Column="0" Margin="0,15,0,0" VerticalOptions="Center" HorizontalOptions="Center" Source="Assets/back.PNG"></ImageButton>
        <!--<ImageButton x:Name="home" Clicked="home_Clicked" Grid.Row="11" Grid.Column="1" BorderColor="Black" HorizontalOptions="Center" Source="Resources/drawable/hm.PNG"></ImageButton>-->
        <Button Text="Click Here For Requirements" x:Name="requirements" Grid.ColumnSpan="2" Clicked="requirement_Clicked" TextColor="DarkBlue"  Grid.Row="11" Grid.Column="1" HorizontalOptions="Center" FontSize="12" BackgroundColor="Transparent" />

    </Grid>

</ContentPage>

      