<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="project.certificate">


    <Grid >
        <!--<Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>-->
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="50"/>
            <!--<RowDefinition Height="20"/>
            <RowDefinition Height="20"/>-->
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <StackLayout MinimumHeightRequest="70" MinimumWidthRequest="70"   Grid.Row="0"  BackgroundColor="WhiteSmoke">

            <Label Text="NZ Certificate in IT (Level 5)" VerticalTextAlignment="Center" HeightRequest="90" FontAttributes="Bold" FontSize="25" TextColor="Black"  FontFamily="ovo" BackgroundColor="#ffd11a" HorizontalTextAlignment="Center"/>

        </StackLayout>
        <Label Text="Comp 5201 Information Technology Operations" Margin="3,0,2,0" MinimumWidthRequest="100" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="15" TextColor="#ffd11a" FontAttributes="Bold" Grid.Row="1"  BackgroundColor="Black"/>
        <Label Text="Comp.5202 Fundamentals of Programming and Problem Solving" Padding="3" Margin="3,0,2,0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="15" TextColor="#ffd11a" FontAttributes="Bold" Grid.Row="2" BackgroundColor="Black" />
        <Label Text="Comp.5203 Professional Practice" FontSize="15" TextColor="#ffd11a" Margin="3,0,2,0" VerticalTextAlignment="Center" Grid.Row="3"  HorizontalTextAlignment="Center" FontAttributes="Bold" BackgroundColor="Black" />
        <Label Text="Comp.5204 Enterprise" FontSize="15" TextColor="#ffd11a" Margin="3,0,2,0" Grid.Row="4"  VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontAttributes="Bold" BackgroundColor="Black"/>

        <Label Text="Requirements" Grid.Row="5" TextColor="#ffd11a" FontSize="18" VerticalTextAlignment="Center" FontAttributes="Bold"/>
        <StackLayout Orientation="Vertical" Grid.Row="6" Margin="5,5,5,5">
           
            <Label Text="1.IELTS Academic score with overall 6 not less than 5.5 bands" FontSize="14"/>
            <Label Text="2.Secondary Education with 60% in any stream with Computer Subject" FontSize="14"/>
            <Label Text="3.Standard Entry Criteria- By Interview" FontSize="14"/>
        </StackLayout>
        <ImageButton x:Name="back" Clicked="Back_Clicked" Grid.Row="8" Margin="5,5,5,5" BorderColor="Black" HorizontalOptions="Start" Source="back.PNG"></ImageButton>
 </Grid>

</ContentPage>

     